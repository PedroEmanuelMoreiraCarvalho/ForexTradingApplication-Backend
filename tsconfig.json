{
  "compilerOptions": {
    "target": "es2017",                               
    "lib": ["ES6"],
    "module": "commonjs",                                
    "rootDir": "./src",                                  
     "typeRoots": [
      "./node_modules/@types"
    ], 
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
